@page "/persondetail/{PersonID}"

<h1 class="page-title">Details for @Person.PersonFName @Person.PersonLName </h1>

<div class="col-12 row">
  <div class="col-2">Image here</div>
  <div class="col-10">
    <div class="col-xs-12 col-sm-8">

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Worker ID</label>
        <div class="col-sm-8">
          <label type="text" class="form-control-plaintext">@Person.PersonID</label>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">First Name</label>
        <div class="col-sm-8">
          <label type="text" class="form-control-plaintext">@Person.PersonFName</label>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Middle Initial</label>
        <div class="col-sm-8">
          <label type="text" class="form-control-plaintext">@Person.PersonMInitial</label>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Last Name</label>
        <div class="col-sm-8">
          <label type="text" class="form-control-plaintext">@Person.PersonLName</label>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">First Name</label>
        <div class="col-sm-8">
          <label type="text" class="form-control-plaintext">@Person.PersonFName</label>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Birthdate</label>
        <div class="col-sm-8">
          <label type="text" class="form-control-plaintext">@Person.PersonBirthday?                                                                                                                                                                                                                                                                                                     .ToShortDateString()</label>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Salary</label>
        <div class="col-sm-8">
          <label type="text" class="form-control-plaintext">@Person.Salary</label>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Phone Number1</label>
        <div class="col-sm-8">
          <label type="text" class="form-control-plaintext">@Person.PersonPhoneNumber1</label>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Phone Number2</label>
        <div class="col-sm-8">
          <label type="text" class="form-control-plaintext">@Person.PersonPhoneNumber2</label>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Person Type</label>
        <div class="col-sm-8">
          <label type="text" class="form-control-plaintext">@Person._PersonType</label>
        </div>
      </div>

    </div>
  </div>
</div>

